<%= render 'user_info'%>
<div class="card_container">
  <div class="row">
    <% @shopping_list.each do |post|%>
      <div class="my-3 col-6 px-0 py-2 col-sm-4" style="border: 1px solid black; border-radius: 0.6rem;">
        <%= link_to post do%>
          <div class="text-dark text-center" style="height: 60px;">
            <h5 class="my-1 mx-3"><%= post.name%></h5>
          </div>
          <hr class="m-0">
          <div class="my-3 text-center">
            <%= image_tag post.image.url, style:"height: 170px; width: 80%; object-fit: cover; border-radius: 0.6rem;"%>
          </div>
        <%end%>
      </div>
    <%end%>
  </div>
</div>