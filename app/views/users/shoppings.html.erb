<div class="card mx-auto my-5" style="max-width: 80%;">
  <div class="card-body">
    <div class="row mx-2 ml-4">
      <%= image_tag @user.user_image.url, class:"mypage_user_icon ml-1"%>
      <div class="col-9 ml-5">
        <h3 class="card-title">
          <% if @user.name? %>
            <%= @user.name%>さんのマイページ
          <% else %>
            名無しさんのマイページ
          <% end %>
        </h3>
        <hr class="mb-2">
        <p class="mb-1 m-0">よく利用する100円ショップ</p>
        <p>
          <% if @user.favoshop? %>
            <%=@user.favoshop%>
          <% else %>
            なし
          <% end %>
        </p>
      </div>
    </div>
    <div class="container-fluid mx-auto mt-3">
      <div class="row">
        <%= render partial: 'user_button', locals: { head:"投稿一覧", path: posts_user_path}%>
        <%= render partial: 'user_button', locals: { head:"買い物リスト", path: shoppings_user_path}%>
        <%= render partial: 'user_button', locals: { head:"レビューした投稿", path: reviews_user_path}%>
        <%= render partial: 'user_button', locals: { head:"アカウント編集", path: edit_user_registration_path}%>
      </div>
    </div>
  </div>
</div>

<div class="row mx-auto px-2" style="max-width: 80%; height:60%;">
  <% @shopping_list.each do |post|%>
    <div class="mt-3 mb-3 mx-2 col-4 p-0" style="border: 1px solid black; border-radius: 0.6rem; max-width: 30%;">
      <%= link_to post do%>
        <div class="text-dark text-center" style="height: 20%;">
          <h5 class="my-1 mx-3"><%= post.name%></h5>
        </div>
        <hr class="m-0">
        <div class="my-3 text-center">
          <%= image_tag post.image.url, style:"width: 70%; object-fit: cover; border-radius: 0.6rem;"%>
        </div>
      <%end%>
    </div>
  <%end%>
</div>