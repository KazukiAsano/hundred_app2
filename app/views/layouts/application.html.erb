<!DOCTYPE html>
<html>
  <head>
    <title>HundredApp2</title>
    <%= favicon_link_tag('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
  </head>

  <body>
  
  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-color">
      <a href="/" >
        <span class="navbar-brand mb-0 header">
          <span class="en">¥</span>100!!!
        </span>
      </a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
          <li class="navbar-item">
            <%= link_to "レビュー閲覧", posts_path ,class:"nav-link" ,style:"color:white"%>
          </li>
          <li class="navbar-item">
            <%= link_to "レビュー投稿", new_post_path ,class:"nav-link" ,style:"color:white"%>
          </li>
          <li class="navbar-item">
            <%= link_to "ランキング", ranking_posts_path ,class:"nav-link" ,style:"color:white"%>
          </li>
          <li class="navbar-item">
            <%= link_to "ショップ検索", map_path ,class:"nav-link" ,style:"color:white"%>
          </li>
          <li class="nav-item dropdown mr-5">
            <a class="nav-link dropdown-toggle py-0" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white">
              <%= image_tag current_user.user_image.url, class:"user_icon"%>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "投稿一覧", posts_user_path(current_user),class:"dropdown-item"%>
              <%= link_to "買い物リスト", shoppings_user_path(current_user) ,class:"dropdown-item"%>
              <%= link_to "レビューした投稿", reviews_user_path(current_user) ,class:"dropdown-item"%>
              <%= link_to "アカウント編集", edit_user_registration_path ,class:"dropdown-item"%>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { confirm: "ログアウトしますか？" } ,class:"dropdown-item"%>
            <div>
          </li>
          <% else %>
            <li class="navbar-item text-right"><%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %></li>
            <li class="navbar-item text-right"><%= link_to "ログイン", new_user_session_path %></li>
            <li class="navbar-item text-right"><%= link_to "アカウント登録", new_user_registration_path%></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
  <%= render 'layouts/flash'%>
  <div class="container">
    <%= yield %> 
  </div>  
  <footer class="fixed-bottom"  style="height: 2rem;">
    <nav class="navbar navbar-dark bg-color py-0">
      <span class="navbar-brand footer">Copyright  kazuki asano, 2021 All Rights Reserved.</span>
    </nav>
  </footer>
  </body>
</html>
